{
    "compilerOptions": {
        "incremental": true,
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es5",
            "es6"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "composite": true,
        // "strictNullChecks": false,
    }
}